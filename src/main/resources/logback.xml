<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="false">
    <contextName>openai</contextName>
    <property name="log.charset" value="utf-8" />
    <property name="log.pattern" value="%d{yyyy-MM-dd HH:mm:ss} %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{36}) - %msg%n" />
    <property name="file.log.pattern" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" />
    <property name="log.path" value="./log/" />
    <property name="log.file" value="${log.file:-${log.path:-${LOG_TEMP:-${java.io.tmpdir:-/tmp}}}/openai.log}"/>

    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${log.pattern}</pattern>
            <charset>${log.charset}</charset>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${file.log.pattern}</pattern>
        </encoder>
        <file>${log.file}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.file}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>${log.file.max.size:-10MB}</maxFileSize>
            <maxHistory>${log.file.max.history:-2}</maxHistory>
        </rollingPolicy>
    </appender>

    <!--普通日志输出到控制台和日志文件-->
    <root level="info">
<!--        <appender-ref ref="console" />-->
        <appender-ref ref="file" />
    </root>
</configuration>